@model IEnumerable<Product>

@{
    ViewData["Title"] = "All Products";
}

<h1>All Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-light table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Name</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    <img src="/media/products/@item.Image" alt="Product Image" width="100" height="75" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Delete</a>
                </td>
            </tr>

            <div class="d-flex w-100 fixed-bottom justify-content-center">
                <pagination page-count="@ViewBag.TotalPages"
                        page-range="@ViewBag.PageRange"
                        page-number="@ViewBag.PageNumber"
                        page-target="/admin/products/@ViewBag.CategorySlug">
                </pagination>
            </div>
        }
    </tbody>
</table>
